{
  "name": "@joinflux/firebase-remote-config",
  "version": "0.5.2",
  "description": "A native plugin for firebase remote config",
  "homepage": "https://github.com/joinflux/firebase-remote-config",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "npm-publish": "np"
  },
  "author": "Priyank Patel <priyank.patel@stackspace.ca>",
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^4.0.0",
    "@types/node": "^18.11.11",
    "firebase": "^8.4.1"
  },
  "devDependencies": {
    "@capacitor/android": "latest",
    "@capacitor/ios": "latest",
    "husky": "^4.2.5",
    "np": "^6.2.4",
    "prettier": "^2.3.0",
    "prettier-plugin-java": "^1.0.2",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "JoinfluxFirebaseRemoteConfig.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joinflux/firebase-remote-config"
  },
  "bugs": {
    "url": "https://github.com/joinflux/firebase-remote-config/issues"
  }
}
